{
  "name": "Better Internet",
  "version": "1.0",
  "description": "",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "webRequest"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/domain_16.png",
      "32": "images/domain_32.png",
      "48": "images/domain_48.png",
      "128": "images/domain_128.png"
    }
  },
  "icons": {
    "16": "images/domain_16.png",
    "32": "images/domain_32.png",
    "48": "images/domain_48.png",
    "128": "images/domain_128.png"
  },
  "manifest_version": 2
}